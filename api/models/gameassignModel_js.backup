'use strict';
var mongoose = require('mongoose');
var Schema = mongoose.Schema;


var gameSchema = new Schema({
  League: {
    type: String,
    required: 'Please enter the leauge name:'
    
  },
    RefName1: {
      type:[{
        FirstName:{
          type: String,
          required: 'Please enter a first name for the referee'
        },
        LastName:{
          type: String,
          required: 'Please enter a last name for the referee'
        },
        Position:{
          type: String,
          required: 'Please enter a position for Ref1 (AR1,AR2, Center)'
        },
        LicenseNumber:{
          type: String,
          required: 'Please enter a license number for ref1'
        },
        GradeNumber:{
          type: String,
          required: 'Please enter a grade number for ref1'
        },
      }]
  },
  Created_date: {
    type: Date,
    default: Date.now()
  },
  GameAcceptStatus: {
    type: [{
      type: String,
      enum: ['assigned-pending', 'accepted', 'game completed']
    }],
    default: ['assigned-pending']
  }
});

module.exports = mongoose.model('Games', gameSchema);