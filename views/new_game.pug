extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
    fieldset
      Legend Game Details
      label(for='game_date') Game Date:
      input#game_date.form-control(type='text', placeholder='Game Date' name='game_date' value=(undefined===genre ? '' : genre.name))
      
      label(for='game_time') Game Time:
      input#game_time.form-control(type='text', placeholder='Game Time' name='game_time' value=(undefined===genre ? '' : genre.name))
    
    fieldset
      Legend Game Location
      label(for='location_name') Location Name :
      input#location_name.form-control(type='text', placeholder='Joe Nuxhall Park' name='location_name' value=(undefined===genre ? '' : genre.name))
          
      label(for='location_address1') Address 1:
      input#location_address1.form-control(type='text', placeholder='1313 Mockingbid Lane' name='location_address1' value=(undefined===genre ? '' : genre.name))
                  
      label(for='location_address2') Address 2:
      input#location_address2.form-control(type='text', placeholder='Suite 13' name='location_address2' value=(undefined===genre ? '' : genre.name))
        
      label(for='city') City:
      input#city.form-control(type='text', placeholder='Atlanta' name='city' value=(undefined===genre ? '' : genre.name))
        
      label(for='state_providence') State/Providence:
      input#state_providence.form-control(type='text', placeholder='OH' name='state_providence' value=(undefined===genre ? '' : genre.name))
        
      label(for='country') Country:
      input#country.form-control(type='text', placeholder='United States' name='country' value=(undefined===genre ? '' : genre.name))
          
    
    
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg